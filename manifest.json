{
    "manifest_version": 3,
    "name": "Accessibility Checker",
    "version": "0.1",
    "description": "Check the accessibility of your web pages using simple yet insightful tools to uncover accessibility barriers and issues.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  